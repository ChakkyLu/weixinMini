/* pages/novel/article.wxss */
.title {
  padding: 1em;
  text-align: center;
}
.follow-list {
  width: 100%;
  padding: 0;
  text-align: left;
  border: 0.3px solid white;
  display: block;
}
.follow-list::selection {
  background-color: rgba(100, 148, 237, 0.9);
}
.list {
  margin: 1em 0;
  display: block;
}
.follow-detail {
  min-height: 100px;
  background-color: white;
  padding: 0 10px;

  /* transition: opacity 1s ease-out;
  opacity: 0; */
}
.follow-list .title {
  padding: 5px 0;
  text-align: left;
  background-color: rgba(100, 148, 237, 0.384);

}
.inner-intro {
  display: block;
  padding: 5px 0;
  font-size: 14px;
}
.inner-notice {
  color: coral;
  font-weight: 400;
}
.text-area {
  width: 60%;
  display: inline-block;
}
.btn-area {
  width: 40%;
  display: inline-block;
  overflow: hidden;
}
.detail-btn {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  color: white;
  background-color: lightskyblue;
  text-align: center;
  vertical-align: center;
}
.chapter-name {
  padding: 2px 0;
  text-decoration: underline;
}
.chapter-list {
  line-height: 90%;
  padding: 10px 0 20px 0;
}
.back-btn {
  width: 80%;
  margin-bottom: 1em;
}
.c-content {
  padding: 10px;
  font-size: 15px;
}